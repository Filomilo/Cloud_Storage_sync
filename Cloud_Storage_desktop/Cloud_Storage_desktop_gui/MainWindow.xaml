<Window  x:Class="Cloud_Storage_desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cloud_Storage_desktop"
        xmlns:viewModel="clr-namespace:Cloud_Storage_desktop.MVVM.ViewModel"
        mc:Ignorable="d"
        Height="800" Width="1200"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True">
    <Window.DataContext>
     <viewModel:HomeViewModel>
         
     </viewModel:HomeViewModel>
    </Window.DataContext>


    <Border Background="#7986cb"
        CornerRadius="20">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition  />
            </Grid.RowDefinitions>

            <TextBlock Text="Cloud Storage"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Foreground="White"
            FontSize="30"/>

            <StackPanel Grid.Row="1">

                <RadioButton Content="Pliki"
                             Height="50"
                             Foreground="White"
                             FontSize="25"
                             Style="{StaticResource MenuButtonTheme}"/>

                <RadioButton Content="Zdjecia"
             Height="50"
             Foreground="White"
             FontSize="25"
             Style="{StaticResource MenuButtonTheme}"/>



                <RadioButton Content="Ostatnie"
             Height="50"
             Foreground="White"
             FontSize="25"
             Style="{StaticResource MenuButtonTheme}"/>

                <RadioButton Content="Kosz"
             Height="50"
             Foreground="White"
             FontSize="25"
             Style="{StaticResource MenuButtonTheme}"/>

                <RadioButton Content="Kolejne funkcje..."
             Height="50"
             Foreground="White"
             FontSize="25"
             Style="{StaticResource MenuButtonTheme}"/>
                <RadioButton Content="Kolejne funkcje..."
             Height="50"
             Foreground="White"
             FontSize="25"
             Style="{StaticResource MenuButtonTheme}"/>
                <RadioButton Content="Kolejne funkcje..."
             Height="50"
             Foreground="White"
             FontSize="25"
             Style="{StaticResource MenuButtonTheme}"/>
            </StackPanel>

            <TextBox
                Width= "250"
                Height="40"
                VerticalContentAlignment="Center"
                HorizontalAlignment="Left"
                Margin="5"
                Grid.Column="1"
                Style="{StaticResource ModernTextBox}"/>


            <ContentControl Grid.Row="1" Grid.Column="1" Margin="10" 
                            Content="{Binding }"/>


        </Grid>



    </Border>



</Window>
