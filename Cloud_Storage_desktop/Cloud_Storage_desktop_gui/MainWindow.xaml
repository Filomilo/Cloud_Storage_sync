<Window
    x:Class="Cloud_Storage_desktop.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Cloud_Storage_desktop"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    Title="CloudSyncer"
    Width="1114"
    Height="808"
    MinWidth="410"
    MinHeight=" 700"
    ui:WindowHelper.UseModernWindowStyle="True"
    Icon="Resources/Main Icon.ico"
    Loaded="MainWindow_OnLoaded"
    mc:Ignorable="d">
    <Grid Margin="10,10,10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" MaxWidth="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>



        <GroupBox
            BorderBrush="Black"
            BorderThickness="1"
            Header="Configuration">
            <Grid Margin="10,10,10,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <Label Content="Api url:" />
                    <TextBox x:Name="TextBox_apiUrl" TextWrapping="Wrap" />
                </StackPanel>
                <StackPanel Grid.Row="1" Margin="0,10,0,0">
                    <Label
                        x:Name="MaxFilesLabel"
                        Content="Max simulation File sync: "
                        RenderTransformOrigin="0.045,0.77" />
                    <TextBox
                        x:Name="TextBox_maxFileSync"
                        Text="TextBox"
                        TextWrapping="Wrap" />
                </StackPanel>
                <StackPanel Grid.Row="2">
                    <Label Content="Sync location: " />
                    <Label x:Name="Label_Location" Content="[[Location]]" />
                    <Button
                        x:Name="Button_changelocation"
                        Margin="0,0,20,0"
                        HorizontalAlignment="Right"
                        Click="Button_changelocation_Click"
                        Content="..." />
                </StackPanel>
                <Button
                    x:Name="Button_Save"
                    Grid.Row="4"
                    Margin="10,0,10,20"
                    VerticalAlignment="Bottom"
                    Click="Button_Save_Click"
                    Content="Save" />

            </Grid>
        </GroupBox>
        <GroupBox
            Grid.Row="2"
            Margin="0,10,0,0"
            BorderBrush="Black"
            BorderThickness="1"
            Header="Service">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />

                </Grid.RowDefinitions>


                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.ColumnSpan="2">

                    <Label
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="Service status: " />
                    <Label
                        x:Name="Label_serviceStatus"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="[[[Sataus]]]" />
                </StackPanel>

                <Button
                    x:Name="Button_createDestroy"
                    Grid.Row="1"
                    Margin="10,10,10,10"
                    HorizontalAlignment="Stretch"
                    Click="Button_createDestroy_Click"
                    Content="Create\Destory" />
                <Button
                    x:Name="Button_startStop"
                    Grid.Row="1"
                    Grid.Column="2"
                    Margin="10,10,10,10"
                    HorizontalAlignment="Stretch"
                    Click="Button_startStop_Click"
                    Content="Start/Stop" />

            </Grid>
        </GroupBox>
        <GroupBox
            x:Name="GroupBox_coneciotn"
            Grid.Row="1"
            Margin="0,10,0,0"
            BorderBrush="Black"
            BorderThickness="1"
            Header="Connection">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />

                </Grid.RowDefinitions>




                <StackPanel Grid.ColumnSpan="2" HorizontalAlignment="Stretch">

                    <Label
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="User:" />

                    <Label
                        x:Name="Label_ConnectionStatus"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Top"
                        Content="[[[Sataus]]]" />
                </StackPanel>
                <StackPanel
                    Grid.Row="1"
                    HorizontalAlignment="Stretch"
                    Orientation="Horizontal">
                    <Button
                        x:Name="Button_Login"
                        Grid.Row="1"
                        Margin="10,10,10,10"
                        HorizontalAlignment="Stretch"
                        Click="Button_Login_Click"
                        Content="Login " />
                    <Button
                        x:Name="Button_Logout"
                        Grid.Row="1"
                        Grid.Column="2"
                        Margin="10,10,10,10"
                        HorizontalAlignment="Stretch"
                        Click="Button_Logout_Click"
                        Content="Logout" />
                    <Button
                        x:Name="Button_Register"
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="10,0,10,0"
                        HorizontalAlignment="Stretch"
                        Click="Button_Register_Click"
                        Content="Register" />
                </StackPanel>

            </Grid>
        </GroupBox>
        <TabControl
            Grid.RowSpan="4"
            Grid.Column="1"
            Grid.ColumnSpan="4">
            <TabItem Header="Cloud">
                <Grid>
                    <local:CloudFilesList x:Name="_cloudFileList" />
                </Grid>

            </TabItem>
            <TabItem Header="Logs">
                <Grid Background="#FFE5E5E5">
                    <Grid x:Name="ScrolViewr_logs">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0*" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBox
                            x:Name="TextBoc_logs"
                            Grid.ColumnSpan="2"
                            Margin="0,0,0,-2"
                            IsReadOnly="True"
                            Text="TextBox"
                            TextChanged="TextBoc_logs_OnTextChanged"
                            TextWrapping="Wrap"
                            VerticalScrollBarVisibility="Auto" />
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
