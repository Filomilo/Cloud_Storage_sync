<Window x:Class="Cloud_Storage_desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cloud_Storage_desktop"
        mc:Ignorable="d"
        Title="MainWindow" Height="537" Width="411"   
        MinHeight=" 540" MinWidth="410"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True">
    <Grid Margin="10,10,10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"  />
            <ColumnDefinition Width="*"  />
        </Grid.ColumnDefinitions>



        <GroupBox BorderBrush="Black" BorderThickness="1" Header="Configuration">
            <Grid Margin="10,10,10,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"  />
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <Label Content="Api url:"/>
                    <TextBox x:Name="TextBox_ApiURl" TextWrapping="Wrap"/>
                </StackPanel>
                <StackPanel Grid.Row="1" Margin="0,10,0,0">
                    <Label x:Name="MaxFilesLabel" Content="Max simulation File sync: " RenderTransformOrigin="0.045,0.77"/>
                    <TextBox x:Name="TextBox_MaxFilesSync" TextWrapping="Wrap" Text="TextBox"/>
                </StackPanel>
                <StackPanel Grid.Row="2">
                    <Label Content="Sync location: "/>
                    <Label x:Name="Label_Location" Content="[[Location]]"/>
                    <Button x:Name="Button_changelocation" Content="..." HorizontalAlignment="Right" Margin="0,0,20,0"/>
                </StackPanel>
                <Button x:Name="Button_Save" Content="Save" Grid.Row="4" Margin="10,0,10,20" VerticalAlignment="Bottom"/>

            </Grid>
        </GroupBox>
        <GroupBox BorderBrush="Black" BorderThickness="1" Grid.Row="1" Margin="0,10,0,0" Header="Service">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />

                </Grid.RowDefinitions>


                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.ColumnSpan="2">

                    <Label Content="Service status:
" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <Label Content="[[[Sataus]]]"
HorizontalAlignment="Left" VerticalAlignment="Top"/>
                </StackPanel>

                <Button Grid.Row="1" HorizontalAlignment="Stretch" Content="Create\Destory" Margin="10,10,10,10"/>
                <Button x:Name="Button_startStop" Grid.Row="1" Grid.Column="2" HorizontalAlignment="Stretch" Content="Start/Stop" Margin="10,10,10,10"/>

            </Grid>
        </GroupBox>
        <GroupBox BorderBrush="{DynamicResource DynamicTextBrush}" BorderThickness="1" Grid.Column="1" Grid.RowSpan="3" Margin="10,0,0,0" Header="Cloud">
            <Border BorderBrush="{DynamicResource SystemControlForegroundBaseHighBrush}" BorderThickness="1"/>
        </GroupBox>
    </Grid>
</Window>
