<Window x:Class="Cloud_Storage_desktop.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cloud_Storage_desktop"
        mc:Ignorable="d"
        Title="LoginWindow" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True" Height="176" Width="422" ResizeMode="NoResize"
        
        >
    <Grid VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Label x:Name="Label_Email" Content="Email: " HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <Label Content="Password: " HorizontalAlignment="Right" Grid.Row="1" VerticalAlignment="Center" Margin="10,0,0,0"/>
        <TextBox x:Name="TextBoc_Email" Grid.Column="1" HorizontalAlignment="Left" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120" Margin="10,10,10,10" MinWidth="300" />
        <PasswordBox x:Name="TextBox_Passwor" Grid.Row="1" VerticalAlignment="Center" Width="120" Grid.Column="1" Margin="10,10,10,10"  MinWidth="300" HorizontalAlignment="Left"/>
        <Button x:Name="Button_login" Content="Login" Grid.Row="2" VerticalAlignment="Top" Grid.ColumnSpan="2" HorizontalAlignment="Right" Margin="10,10,10,10" Click="Button_login_Click"/>
    </Grid>
</Window>
