<UserControl
    x:Class="Cloud_Storage_desktop.FileListElement"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Cloud_Storage_desktop"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    Height="Auto"
    mc:Ignorable="d">

    <Border BorderThickness="1" CornerRadius="8">
        <Grid VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />

            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Label
                x:Name="Label_FileName"
                Margin="10,10,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="[[FileName]]"
                FontSize="15" />
            <Label
                x:Name="Label_path"
                Grid.Row="1"
                Grid.Column="0"
                Margin="20,10,20,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="[[[[[[[[[[[[[[[[[[[[[[[PAth]]]]]]]]]]]]]]]]]]]]]" />
            <Label
                x:Name="Label_size"
                Grid.Row="0"
                Grid.RowSpan="2"
                Grid.Column="1"
                Margin="20,20,20,20"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="[[size]]" />
            <Label
                x:Name="Label_Version"
                Grid.Row="0"
                Grid.RowSpan="2"
                Grid.Column="2"
                Margin="20,20,20,20"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="[[Version]]" />

            <Label
                x:Name="Label_Status"
                Grid.Row="0"
                Grid.RowSpan="2"
                Grid.Column="3"
                Margin="20,20,20,20"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="[[Status]]" />
            <Expander
                Grid.Row="2"
                Grid.RowSpan="1"
                Grid.Column="0"
                Grid.ColumnSpan="4"
                Height="auto"
                VerticalAlignment="Stretch">


                <ListView d:ItemsSource="{d:SampleData ItemCount=5}" Background="Aqua">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Width="200" Header="File Name">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding FileName}" />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Open" />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>

            </Expander>

        </Grid>
    </Border>

</UserControl>
